{
  "main": "./index.js",
  "private": true,
  "packageManager": "pnpm@9.4.0",
  "scripts": {
    "build": "ncc build source/index.ts -o . -C -m --target es2020",
    "build:watch": "pnpm build -w",
    "dev": "ncc build source/index.ts -w --target es2020",
    "prepare": "pnpm --package simple-git-hooks@2.11.1 dlx simple-git-hooks"
  },
  "devDependencies": {
    "@types/node": "^20.12.10",
    "typescript": "^5.4.5",
    "@actions/core": "^1.10.1",
    "@vercel/ncc": "^0.38.1",
    "@biomejs/biome": "^1.8.3"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm --package nano-staged@0.8.0 dlx nano-staged"
  },
  "nano-staged": {
    "*.{js,ts}": "biome check --write --diagnostic-level=error --no-errors-on-unmatched"
  }
}
